<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.leonardo.projetopi.UC2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="LOGIN"
        android:textSize="44dp"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"

        android:editable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="E-mail: "
        android:textSize="22dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp" />

    <TextView
        android:background="@drawable/black_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:textSize="20dp"
        android:id="@+id/campoEmail"
        android:layout_alignBottom="@+id/textView2"
        android:editable="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView2"
        android:clickable="true"
        android:enabled="true"
        android:onClick="clickouEmail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Senha: "
        android:textSize="22dp"
        android:id="@+id/textView4"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:background="@drawable/black_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:textSize="22dp"
        android:id="@+id/campoSenha"
        android:layout_alignTop="@+id/textView4"
        android:editable="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView2"
        android:onClick="clickouSenha" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CADASTRAR"
        android:gravity="center"

        android:background="@color/colorPrimaryDark"
        android:id="@+id/button"
        android:clickable="true"
        android:textColor="#f9f9ed"
        android:width="30dp"
        android:textStyle="bold"
        android:translationZ="20dp"
        android:onClick="clicouCadastrar"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Esqueci minha senha"
        android:textColorLink="@color/colorPrimary"
        android:textColor="@color/colorPrimary"
        android:textSize="19dp"
        android:id="@+id/textView6"
        android:layout_below="@+id/campoSenha"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />


</RelativeLayout>
