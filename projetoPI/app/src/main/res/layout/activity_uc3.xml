<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Configurações"
        android:id="@+id/textView11"
        android:textSize="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notificações       "
        android:id="@+id/switch1"
        android:textSize="40dp"
        android:checked="false"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:layout_marginTop="79dp" />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:id="@+id/iconMap"
        android:background="@drawable/editar"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:onClick="clickouAlterar" />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:background="@drawable/renomear"
        android:clickable="true"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/iconMap"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView"
        android:onClick="clickouParaDelete" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAIR"
        android:id="@+id/button4"
        android:textSize="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/switch1"
        android:layout_toEndOf="@+id/imageView"
        android:clickable="true"
        android:enabled="true"
        android:onClick="clickouSair" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Editar informações da minha conta"
        android:textSize="25dp"
        android:id="@+id/textView14"
        android:layout_alignTop="@+id/iconMap"
        android:layout_toEndOf="@+id/iconMap"
        android:textColor="#040404" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Deletar minha conta"
        android:textSize="29dp"
        android:id="@+id/textView15"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignEnd="@+id/switch1"
        android:layout_above="@+id/button4"
        android:textColor="#040404" />


</RelativeLayout>