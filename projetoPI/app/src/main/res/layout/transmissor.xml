<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="45dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Informações educativas"
        android:id="@+id/textView41"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="72dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nome científico: Aedes aegypti"
        android:id="@+id/textView42"
        android:textSize="25dp"
        android:layout_below="@+id/textView41"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hábitos:"
        android:id="@+id/textView43"
        android:layout_centerVertical="true"
        android:textSize="30dp"
        android:layout_alignStart="@+id/textView42"
        android:layout_alignEnd="@+id/textView42" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="- Se reproduz em água parada."
        android:id="@+id/textView44"
        android:textSize="30dp"
        android:layout_below="@+id/textView43"
        android:layout_alignStart="@+id/textView43" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="- Necessita de sangue para maturação dos ovos."
        android:id="@+id/textView45"
        android:textSize="30dp"
        android:layout_below="@+id/textView44"
        android:layout_alignStart="@+id/textView44" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="- Hábitos noturnos."
        android:id="@+id/textView46"
        android:textSize="30dp"
        android:layout_below="@+id/textView45"
        android:layout_alignStart="@+id/textView45" />


</RelativeLayout>